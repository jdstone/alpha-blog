<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert <%= bootstrap_flash_class_for(name) %> alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>
