<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="input-group row mb-3">
          <%= f.label :firstname, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :firstname, class: "form-control shadow rounded", placeholder: "Enter your firstname" %>
          </div>
        </div>

        <div class="input-group row mb-3">
          <%= f.label :lastname, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :lastname, class: "form-control shadow rounded", placeholder: "Enter your lastname" %>
          </div>
        </div>

        <div class="input-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="input-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="input-group row mb-3">
          <%= f.label :password_confirmation, 'Confirm Your Password', class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password_confirmation, class: "form-control shadow rounded", placeholder: "Type your password again" %>
          </div>
        </div>

        <div class="input-group justify-content-center mb-3">
          <%= f.submit 'Sign up', class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
