<h1 class="text-center mt-4">Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to 'Edit category name', edit_category_path(@category), class: "btn btn-outline-info" %>
    <%= link_to 'Delete this category', category_path(@category), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure?" } %></h5>
  </div>
<% end %>

<% if @articles.count > 0 %>
  <h3 class="text-center mt-4">Articles</h3>
  <div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
  </div>

  <%= render 'articles/article' %>

  <div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
  </div>
<% else %>
  <h5 class="text-center mt-5">There are no articles to display</h5>
<% end %>
